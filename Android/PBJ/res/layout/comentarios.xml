<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/linear_comentarios" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/azul_header">
        <ImageView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/header"
    />  
        
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="409dip" 
        android:layout_weight="1.12" 
        android:orientation="vertical"
        >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <TextView 
         	android:id="@+id/titulo_comentarios"
         	android:layout_width="wrap_content"
         	android:layout_height="wrap_content"
         	android:layout_margin="10dip"
         	android:text="@string/publicidad"   
         	android:textSize="22dip"
         	android:textColor="@color/black"
         	android:textStyle="bold"
         />
        
        <Button 
            android:layout_below="@+id/titulo_comentarios"
         	android:id="@+id/comentar"
			android:layout_width="wrap_content"
         	android:layout_height="wrap_content"   
         	android:text="@string/comentar"
         	android:layout_alignParentRight="true"
         	android:textSize="12dip"         	    	   
         />
        
    </RelativeLayout>
    
   <RelativeLayout 
        android:layout_width="match_parent"
		android:layout_height="1dip"
     	android:background="@color/blue"
     	android:layout_marginLeft="0dip"
     	android:layout_marginRight="0dip"
     	android:layout_marginTop="10dip"
     	android:layout_marginBottom="0dip"
	/> 

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
         >

        <LinearLayout
            android:id="@+id/lista_comentarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

    </LinearLayout>
    
</LinearLayout>